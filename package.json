{
	"name": "firelaw",
	"version": "0.0.0-beta.1",
	"description": "ðŸ”¥ Write truly safe and scalable Firestore Rules in Typescript",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"bin": {
		"firelaw": "./dist/index.js"
	},
	"scripts": {
		"reinstall": "rm -rf node_modules/ && rm -rf package-lock.json && npm i && npm link",
		"link": "npm r firelaw -g && npm link",
		"tsc": "tsc",
		"lint": "eslint . --ext .ts",
		"prettier": "npx pretty-quick --staged",
		"build": "rm -rf dist && rm -rf types && babel src --out-dir dist --extensions \".ts\" && cp src/cli/settings.js dist/cli/settings.js && npm run link  ",
		"test": "jest --coverage --silent",
		"dev": "cross-env NODE_ENV=dev npm run build",
		"pub": "cross-env NODE_ENV=prod npm run build && npm run tsc && npm publish",
		"pre-commit": "npm run tsc && npm run lint --fix && npm run prettier",
		"pile": "ts-node src/cli/babel.ts"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/tylim88/firelaw.git"
	},
	"author": "",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/tylim88/firelaw/issues"
	},
	"homepage": "https://github.com/tylim88/firelaw#readme",
	"keywords": [
		"firebase",
		"firestore",
		"cli",
		"typescript"
	],
	"devDependencies": {
		"@babel/cli": "^7.4.3",
		"@babel/node": "^7.2.2",
		"@babel/plugin-proposal-export-namespace-from": "^7.14.5",
		"@types/glob": "^7.2.0",
		"@types/jest": "^27.0.2",
		"@typescript-eslint/eslint-plugin": "^5.0.0",
		"@typescript-eslint/parser": "^5.0.0",
		"babel-core": "^6.26.3",
		"babel-eslint": "^10.1.0",
		"babel-jest": "^27.2.5",
		"babel-plugin-module-resolver": "^4.1.0",
		"babel-plugin-transform-remove-console": "^6.9.4",
		"chalk": "^4.1.2",
		"cross-env": "^7.0.3",
		"eslint": "^7.32.0",
		"eslint-cli": "^1.1.1",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.25.2",
		"eslint-plugin-prettier": "^4.0.0",
		"husky": "^7.0.0",
		"jest": "^27.2.5",
		"jsdoc": "^3.6.5",
		"json-stringify-pretty-compact": "^3.0.0",
		"prettier": "^2.4.1",
