{
	"compilerOptions": {
		"isolatedModules": true,
		"module": "CommonJS",
		"declaration": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"noImplicitAny": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"target": "esNext",
		"allowJs": true,
		"baseUrl": "src",
		"emitDeclarationOnly": true,
		"resolveJsonModule": true,
		"outDir": "dist",
		"paths": {
			"*": ["./*"]
		},
		"typeRoots": ["./node_modules/@types"],
		"plugins": [{ "transform": "transformer-module" }]
	},
	"include": ["src/**/*"]
}
