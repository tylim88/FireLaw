{
	"compilerOptions": {
		"isolatedModules": true,
		"module": "CommonJS",
		"declaration": true,
		"esModuleInterop": true,
		"sourceMap": false,
		"noImplicitAny": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"target": "esNext",
		"allowJs": true,
		"emitDeclarationOnly": false,
		"resolveJsonModule": true,
		"outDir": "dist"
	},
	"include": ["src/**/*"]
}
